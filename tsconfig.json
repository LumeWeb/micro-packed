{
  "compilerOptions": {
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "target": "esnext",
    "lib": [
      "es2020",
      "dom"
    ],
    "module": "node16",
    "moduleResolution": "node",
    "outDir": "dist",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
  },
  "include": [
    "index.ts",
    "_type_test.ts"
  ],
  "exclude": [
    "node_modules",
    "lib"
  ]
}
